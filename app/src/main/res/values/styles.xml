<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/sunshine_blue</item>
        <item name="colorPrimaryDark">@color/sunshine_dark_blue</item>
    </style>

    <!-- Main Activity theme -->
    <style name="MainActivityTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Sunshine.NoTitle</item>
    </style>

    <!-- Settings activity theme. -->
    <style name="SettingsTheme" parent="AppTheme">
    </style>

    <!-- main activity action bar styles -->
    <style name="ActionBar.Solid.Sunshine.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ic_logo</item>
    </style>

    <!-- Style for forecast listview -->
    <style name="ForecastListStyle">

    </style>

    <!-- List Item styles -->

    <style name="TodayList">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TodayListItemText" parent="TodayList">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <style name="TodayListItemMax" parent="TodayList">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/text_size__list_item_max</item>
    </style>

    <style name="TodayListItemMin" parent="TodayList">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/text_size__list_item_min</item>
        <item name="android:paddingLeft">@dimen/padding_double</item>
    </style>

    <style name="NormalListItemTop">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <style name="NormalListItemBottom">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <!-- Detail Fragment styles -->
    <style name="DetailFragmentLargeText">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <style name="DetailFragmentSmallText">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAppearance">?android:textAppearance</item>
    </style>

    <style name="DetailFragmentMax">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/text_size__detail_max</item>
    </style>

    <style name="DetailFragmentMin">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/text_size__detail_min</item>
    </style>

</resources>
