<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:background="@drawable/touch_selector_today">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/left_image_margin"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv__list_forecast_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TodayListItemText"/>

        <TextView
            android:id="@+id/tv__list_forecast_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TodayListItemMax"/>

        <TextView
            android:id="@+id/tv__list_forecast_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TodayListItemMin"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv__list_forecast_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv__list_forecast_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TodayListItemText"/>

    </LinearLayout>

</LinearLayout>

