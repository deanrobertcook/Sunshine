<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:paddingTop="@dimen/padding_single"
              android:paddingBottom="@dimen/padding_single"
              android:background="@drawable/touch_selector">

    <ImageView
        android:id="@+id/iv__list_forecast_image"
        android:layout_width="@dimen/left_image_margin"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv__list_forecast_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/NormalListItemTop"/>

        <TextView
            android:id="@+id/tv__list_forecast_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/NormalListItemBottom"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv__list_forecast_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/NormalListItemTop"/>

        <TextView
            android:id="@+id/tv__list_forecast_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/NormalListItemBottom"/>

    </LinearLayout>

</LinearLayout>